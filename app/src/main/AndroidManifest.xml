<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions (keep existing) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- LAUNCHER ACTIVITY -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false" />

        <!-- Main App Activities -->
        <activity
            android:name=".activities.DashboardActivity"
            android:exported="false" />

        <!-- Ride Management Activities -->
        <activity
            android:name=".activities.BookRideActivity"
            android:exported="false" />

        <!-- ADD THIS LINE: BookingConfirmationActivity -->
        <activity
            android:name=".activities.BookingConfirmationActivity"
            android:exported="false" />

        <activity
            android:name=".activities.OfferRideActivity"
            android:exported="false" />

        <activity
            android:name=".activities.FindRideActivity"
            android:exported="false" />

        <!-- Ride Flow Activities -->
        <activity
            android:name=".activities.RidePostedActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RideConfirmedActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RideCompletionActivity"
            android:exported="false" />

        <!-- Tracking & Location Activities -->
        <activity
            android:name=".activities.RideTrackingActivity"
            android:exported="false" />

        <activity
            android:name=".activities.LiveLocationActivity"
            android:exported="false" />

        <!-- Rating Activities -->
        <activity
            android:name=".activities.RatingActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RateDriverActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RatePassengerActivity"
            android:exported="false" />

        <!-- Services -->
        <service
            android:name=".services.RideTrackingService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".services.GuardianAlertService"
            android:enabled="true"
            android:exported="false" />

    </application>
</manifest>